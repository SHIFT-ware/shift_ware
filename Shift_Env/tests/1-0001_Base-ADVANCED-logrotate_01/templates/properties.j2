{{ targets.centos6 }}:
  connection_hostname: {{ targets.centos6 }}
  operating_system: 'Linux'
  BASE: 
  ADVANCED:
    logrotate_basic_option: 
      cycle: 'daily'
      rotate_num: 10
      create: False
      add_date: False
      compress: False
    logrotate_files: 
      - path: '/var/log/wtmp'
      - path: '/var/log/btmp'
